<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/background">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="88dp"
            android:layout_marginTop="60dp"
            android:src="@drawable/moon"/>

        <EditText
            android:id="@+id/loginID"
            android:layout_width="270dp"
            android:layout_height="50dp"
            android:layout_marginLeft="45dp"
            android:layout_marginTop="320dp"
            android:background="@drawable/round_textfield"
            android:paddingLeft="10dp"
            android:hint="ID(Email)"
            android:textColorHint="#766161"
            android:singleLine="true"
            android:textColor="@color/colorPrimaryDark"/>

        <EditText
            android:id="@+id/loginPassword"
            android:layout_width="270dp"
            android:layout_height="50dp"
            android:layout_alignLeft="@id/loginID"
            android:layout_below="@id/loginID"
            android:layout_marginTop="10dp"
            android:background="@drawable/round_textfield"
            android:paddingLeft="10dp"
            android:hint="Password"
            android:textColorHint="#766161"
            android:singleLine="true"
            android:textColor="@color/colorPrimaryDark"
            android:inputType="textPassword"/>

        <Button
            android:id="@+id/loginBtn"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:layout_alignLeft="@id/loginPassword"
            android:layout_below="@id/loginPassword"
            android:layout_marginTop="10dp"
            android:background="@drawable/roundbutton"
            android:text="로그인"
            android:textSize="15dp"
            android:textColor="@color/colorPrimaryDark"/>

        <Button
            android:id="@+id/registBtn"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:background="@drawable/roundbutton"
            android:text="회원가입"
            android:textSize="15dp"
            android:layout_above="@+id/findPwBtn"
            android:layout_alignRight="@+id/loginPassword"
            android:textColor="@color/colorPrimaryDark"/>

        <Button
            android:id="@+id/findPwBtn"
            android:layout_width="270dp"
            android:layout_height="50dp"
            android:layout_alignLeft="@id/loginPassword"
            android:layout_below="@id/loginBtn"
            android:layout_marginTop="10dp"
            android:background="@drawable/roundbutton"
            android:text="비밀번호 찾기"
            android:textSize="15dp"
            android:textColor="@color/colorPrimaryDark"/>

    </RelativeLayout>

</LinearLayout>